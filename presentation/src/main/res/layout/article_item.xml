<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvArticleTitle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvArticleFirstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="1"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                tools:text="asd" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_right"
            app:layout_constraintStart_toEndOf="@+id/cvArticleTitle"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Supporters of democratic candidate Jon ossof after this was killed in a car accident and killed many others" />

        <TextView
            android:id="@+id/tvArticleAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/tvArticleDate"
            app:layout_constraintStart_toStartOf="@+id/tvArticleTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvArticleTitle"
            tools:text="By Roni Caryn Rabin" />

        <TextView
            android:id="@+id/tvArticleDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="2017-06-23"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@+id/tvArticleAuthor"
            app:layout_constraintEnd_toEndOf="@+id/tvArticleTitle"
            app:layout_constraintTop_toTopOf="@+id/tvArticleAuthor"
            app:layout_constraintBottom_toBottomOf="@+id/tvArticleAuthor"/>

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_arrow_right_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
